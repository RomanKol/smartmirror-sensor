//- Inline styles after here
style.
  #widget-#{widget._id} > div{
    width:  100%;
    height:  100%;
  }
  #widget-#{widget._id} div div {
    width: 50%;
    height: 100%;
    float: left;
    display: table-cell;
    vertical-align: middle;
  }
  #widget-#{widget._id} svg {
    width: auto;
    height: 50%;
  }

  #widget-#{widget._id} h2 {
    font-size: 5em;
    margin: 0;
    text-align: center;
  }



//- Inline scripts after here
script.
  var widgetEl = document.getElementById('widget-#{widget._id}'),
    humEl = widgetEl.querySelector('.hum h2'),
    tempEl = widgetEl.querySelector('.temp h2');


  function getData() {
    var request = new XMLHttpRequest();
    request.open('GET', '/sensors/sht31', true);

    request.onload = function() {
      if (this.status >= 200 && this.status < 400) {
        // Success!
        var data = JSON.parse(this.response);
        humEl.textContent = Math.round(data.Humidity) + ' °C';
        tempEl.textContent = Math.round(data.Temperature) + ' %';
      } else {
        humEl.textContent = '- °C';
        tempEl.textContent = '- %';
      }
    };

    request.onerror = function() {
      console.log('err')
      widgetEl.style.opacity = 0;
    };

    request.send();
  }

  getData();

  setInterval(function(){
    getData();
  }, 30*1000);
